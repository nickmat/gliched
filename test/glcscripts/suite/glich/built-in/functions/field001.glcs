// field001.glcs - @field( value ) // convert value to field.

write nl;

let a = null;
let v = @field( a );
write v, a[.type], v[.type] nl;
a = "321";
let v = @field( a );
write v, a[.type], v[.type] nl;
a = true;
let v = @field( a );
write v, a[.type], v[.type] nl;
a = 123n;
let v = @field( a );
write v, a[.type], v[.type] nl;
a = 345f;
let v = @field( a );
write v, a[.type], v[.type] nl;
a = 1.2;
let v = @field( a );
write v, a[.type], v[.type] nl;
a = 10 .. 10;
let v = @field( a );
write v, a[.type], v[.type] nl;
// Note, RLists are automatically well formed and demoted.
a = 199 | 199 .. 199;
let v = @field( a );
write v, a[.type], v[.type] nl;
a = {:,11};
let v = @field( a );
write v, a[.type], v[.type] nl;
a = @error( "Test" );
let v = @field( a );
write v, a[.type], v[.type] nl;


/*[OUTPUT]

?, null, field
321, string, field
?, bool, field
123, number, field
345, field, field
1, float, field
10, range, field
199, field, field
?, object, field
?, error, field

[OUTPUT]*/
